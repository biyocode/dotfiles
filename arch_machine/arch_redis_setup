sudo pacman -S redis -noconfirm
echo "w /sys/kernel/mm/transparent_hugepage/enabled - - - - never" | sudo tee -a /etc/tmpfiles.d/redis.conf
echo "w /sys/kernel/mm/transparent_hugepage/defrag - - - - never" | sudo tee -a /etc/tmpfiles.d/redis.conf
echo "net.core.somaxconn=512" | sudo tee -a /etc/sysctl.d/99-sysctl.conf
echo "vm.overcommit_memory=1" | sudo tee -a /etc/sysctl.d/99-sysctl.conf
